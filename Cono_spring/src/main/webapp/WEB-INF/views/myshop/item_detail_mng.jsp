<script type="text/javascript">
	$(function() {
		var imgs;
		var img_count;
		var img_position = 1;
		
		imgs = $(".swiper-wrapper ul");
		img_count = imgs.children().length;
		
		$("#previous").click(function() {
			back();
		});
		$("#next").click(function() {
			next();
		});
		
		function back() {
			if(img_position > 1) {
				imgs.animate({
					left:'+=400px'
				});
				img_position--;
			}
		}
		function next() {
			if(img_position < img_count) {
				imgs.animate({
					left:'-=400px'
				});
				img_position++;
			}
		}
	});
	
	
</script>
